@model DistanceSchool.Web.ViewModels.Administration.Dashboard.AdministrationHomeViewModel
@{
    ViewData["Title"] = "Administration";
}

<h1 class="text-md-center border-dark">Администраторска страница</h1>
<div class="row">
    <div class="col-md-5 rounded container-fluid" style="background-color:aquamarine">
        <h4 class="text-md-center">Дисциплини :</h4>
        <ul>
            @foreach (var discipline in Model.Disciplines)
            {
                <li>@discipline</li>
            }
        </ul>
        <a class="btn btn-outline-primary mb-2  container-fluid border-dark" asp-area="" asp-controller="Discipline" asp-action="CreateDiscipline">Нова Дисциплина</a>
    </div>
    <div class="col-md-5 rounded container-fluid" style="background-color:aquamarine">
        <h4 class="text-md-center">Кандидати за директор :</h4>
        <partial name="_CandidacesList" model="@Model.Candidacies" />
    </div>
</div>



@section PrivateSideBar{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="School" asp-action="AddSchool">Ново училище</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Discipline" asp-action="CreateDiscipline">Нова Дисциплина</a>
    </li>
}
