@model DistanceSchool.Web.ViewModels.Lessons.CreateAndAddLessonViewModel;

@{
    ViewData["Title"] = "CreateLesson";
}

<div class="row">
    <h1 class="col-md-6">
        <i class="fas fa-users text-left"></i> - @Model.TeamName @Model.TeamLevel
    </h1>
    <h1 class="col-md-6 text-right">
        <i class="fas fa-book"></i> - @Model.DisciplineName
    </h1>
</div>

<div class="offset-4 col-md-4 text-center" style="background-color:aquamarine">
    <h3 class="text-center">Създай урок :</h3>
    <form method="post" class="text-center" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="All"></div>
        <input type="hidden" name="TeamId" value="@Model.TeamId" />
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="hidden" name="DisciplineId" value="@Model.DisciplineId" />
        <div class="form-group">
            <div class="m-md-2">
                <label asp-for="NewLessonName"></label>
                <input asp-for="NewLessonName" class="form-control" />
                <span asp-validation-for="NewLessonName" class="text-danger"></span>
            </div>
            <div class="m-md-2">
                <label asp-for="NewLessonData"></label>
                <input class="form-control-file" asp-for="NewLessonData" style="background-color:white" />
                <span asp-validation-for="NewLessonData" class="text-danger"></span>
            </div>
            <div class="m-md-2">
                <label asp-for="DateOfStudy"></label>
                <input asp-for="DateOfStudy" class="form-control" />
                <span asp-validation-for="DateOfStudy" class="text-danger"></span>
            </div>
            <input type="submit" value="Създай и добави" class="btn btn-light m-md-2" />
        </div>
    </form>
</div>