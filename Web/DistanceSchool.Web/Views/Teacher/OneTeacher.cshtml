@model DistanceSchool.Web.ViewModels.Teachers.OneTeachetViewModel

@{
    ViewData["Title"] = "Teacher " + Model.TeacherNames;
}

<div class="row mb-2" style="background-color:azure">
    <h1 class="col-md-8 rounded"><i class="fas fa-school"> @Model.SchoolName</i></h1>
    <h1 class="col-md-4 text-center rounded"><i class="fas fa-chalkboard-teacher"></i> @Model.TeacherNames</h1>
</div>
<div class="row" style="background-color:aquamarine">
    @foreach (var discipline in Model.Disciplines)
    {
        <div class="col-md-5 m-md-4 rounded" style="background-color:azure">
            <h3 class="text-center">@discipline.Name</h3>
            <ul>
                @foreach (var team in discipline.Teams)
                {
                    <li class="font-italic">@team.TeamName <a href="/Team/Passport/@team.Id?DisciplineName=@discipline.Name" class="btn-link font-italic"> - Подробности</a></li>
                }
            </ul>
        </div>
    }

</div>